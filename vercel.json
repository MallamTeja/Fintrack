{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "^/static/(.*)",
      "dest": "frontend/public/static/$1"
    },
    {
      "src": "^/favicon.ico",
      "dest": "frontend/public/favicon.ico"
    },
    {
      "src": "^/manifest.json",
      "dest": "frontend/public/manifest.json"
    },
    {
      "src": "^/(.*).(js|css|png|jpg|jpeg|gif|ico|json|svg)$",
      "dest": "frontend/public/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/public/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "MONGODB_URI": "@mongodb_uri",
    "JWT_SECRET": "@jwt_secret"
  }
}
